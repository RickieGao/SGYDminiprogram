/* pages/me/me.wxss */
page {
  background-color: #ffffff;
}
.card {
  box-shadow: 0 1px 2px rgba(0,0,0,0.3);
}
.userinfo {
  display: flex;
  padding: 5rpx;
  align-items: center;
  background-color: #ffffff;
  margin-top: 10rpx;
}

#myId {
  font-size: large;
  color: #000000;
}

.userinfo-avatar {
  overflow: hidden;
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  /* border-radius: 50%; */
}

.userPoint {
display: flex;
flex-direction: column;
background-color: #ffffff;
margin-top: 10rpx;
}

.pointInfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

#myPoint {
  margin-top: 30rpx;
  font-size: large;
  font-weight: bold;
  text-shadow: 0 1px 2px rgba(0,0,0,0.3);
}

#point {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
  font-size: xx-large;
  font-weight: bold;
  color: #00cccc;
  text-shadow: 0 1px 2px rgba(0,0,0,0.3);
}

.pointControl {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  margin-bottom: 10rpx;
}

.myMoment{
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  background-color: #ffffff;
  margin-top: 10rpx;
}

.items{
  padding: 30rpx;
  flex-direction: row;
  justify-content: start;
}

.arrow{
  padding: 0;
  margin-left: 50%;
}

.VdivLine{
  background: #eee;
  height: 60rpx;
  width: 5rpx;
}

.HdivLine{
  background: #eeeeee;
  width: 100%;
  height: 3rpx;
 }